<h2>Your Cart</h2>
<table class="table table-striped">
    <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Qty</th>
    </tr>
    </thead>
    <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each_with_index do |item, i| %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_qty += item[1].to_i %>
    <% end %>
    <tr class="active" >
      <th colspan="2" style="color: white; background-color: black" >Your Cart Total:</th>
      <td style="color: white; background-color: black"><%= total_price %> Rub</td>
      <td style ="color: white; background-color: black"><%= total_qty %></td>
    </tr>
    </tbody>
</table>

<form action="/place_order" method="post" role="form">
  <input  name="order[orders_input]" type="hidden" value="<%= @orders_input %>">
  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your Name" value="<%=  %>" />

  </div>
  <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Your Name" value="<%=  %>" />

  </div>
  <div class="form-group">
    <label>Address</label>
    <textarea name="order[address]" type="text" class="form-control" placeholder="Your Name" value="<%=  %>" ></textarea>

  </div>
  <button type="submit" class="btn btn-success btn-lg" >Place this order!</button>
</form>